<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <FrameLayout
        android:id="@+id/daily_workout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Workout"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="30sp"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_workout_btn"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_input_add"
            android:layout_gravity="right"
            android:layout_margin="13dp"
            android:contentDescription="Add a workout for today"/>

        <ListView
            android:id="@+id/l_Workouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/new_workout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="New Workout"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/set_Workout"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Workout Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/set_Weight"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Weight in lbs"
            android:inputType="number" />

        <TableRow
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/set_reps"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Reps"
                android:inputType="number" />

            <EditText
                android:id="@+id/set_Sets"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Sets"
                android:inputType="number" />
        </TableRow>

        <Button
            android:id="@+id/bt_Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:text="Add Workout" />

    </LinearLayout>
</FrameLayout>