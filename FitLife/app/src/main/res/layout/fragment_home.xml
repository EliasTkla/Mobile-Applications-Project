<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/page_container"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/teal_700" >

        <TextView
            android:id="@+id/welcomeUser"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/recordNewMeasurements"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="15dp"
            app:backgroundTint="@color/white"
            app:tint="@android:color/black"
            app:srcCompat="@android:drawable/ic_input_add" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/date_container"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/page_container"
        android:background="@color/teal_200" >
        <TextView
            android:id="@+id/lastDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15dp" />
    </FrameLayout>

    <ScrollView
        android:id="@+id/cardScrollView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/date_container">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/progressList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
    </ScrollView>

    <View
        android:id="@+id/divider"
        android:layout_width="420dp"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/cardScrollView"
        android:background="@android:color/darker_gray"/>

    <com.jjoe64.graphview.GraphView
        android:id="@+id/trendGraph"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/divider"/>

    <Button
        android:id="@+id/switchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trendGraph"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/teal_200"
        android:text="Weight" />

</RelativeLayout>